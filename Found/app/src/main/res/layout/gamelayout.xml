<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF4F5"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/game_header_level_TextView"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="level"
                android:textColor="#054950"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/game_header_level_count"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="1"
                android:textColor="#054950"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/game_header_targer_TextView"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="target"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/targetCount"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="initilTarget"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/countText"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="count"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="0"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Timer_Text"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:padding="12dp"
                android:text="timer"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Timer_Count"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="180"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="5dp"
            android:background="#33b5e5"
            android:padding="5dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/gameRelativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="#333333" >

        <ImageView
            android:id="@+id/clickMeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="s"
            android:minHeight="100dp"
            android:padding="10dp"
            android:src="@drawable/ic_menu_camera" />
    </LinearLayout>

</LinearLayout>