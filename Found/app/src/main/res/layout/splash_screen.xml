<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/splash_screen_holder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="end">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            android:orientation="vertical">

            <com.mike.givemewingzz.found.customviews.FoundTextView
                android:id="@+id/splash_screen_head_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/faded_rectangle"
                android:gravity="center_vertical|end"
                android:padding="16dp"
                android:text="@string/splash_header"
                android:textColor="@color/brown_2"
                android:textSize="24sp"
                app:foundFont="@integer/font_roboto_bold" />

            <com.mike.givemewingzz.found.customviews.FoundTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/splash_screen_head_text"
                android:alpha="0.7"
                android:background="@drawable/start"
                android:backgroundTintMode="src_over"
                android:drawableTint="@color/red5"
                android:gravity="center"
                android:padding="24dp"
                android:text="Skip Waiting"
                android:textColor="@color/green_5"
                android:textSize="12sp"
                app:foundFont="@integer/font_roboto_light" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/splash_screen_spam_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_margin="8dp"
        android:background="@drawable/colored_circle"
        android:padding="18dp"
        android:src="@drawable/cafe_white" />

</LinearLayout>